  <div class="card">
      <div class="card-header bg-light flex-row justify-space-between post-title" data-id="{{posts.id}}">
        <h2>
          {{posts.title}}
        </h2>
        <h3>
            {{posts.content}}
        </h3>
        <div>
          Post by
          {{posts.user.username}}
          on
          {{format_date posts.date_created}}
        </div>
      </div>
    </div>

  <div class="container">
     <div class="mb-3">
       <br
      <label for="exampleFormControlTextarea1" class="form-label">Share your comment below:</label>
      <textarea class="form-control" id="comment-body" rows="3"></textarea>
    </div>
    <button type="button" class="btn btn-warning" id="comment-button">Submit</button>
   </div>
   <br
<div>
{{#if posts.comments}}
{{#each posts.comments}}
{{!-- {{log posts.comments 'am i getting this'}} --}}
